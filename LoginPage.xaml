<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jgarridoExamen.LoginPage"
             >

    <StackLayout>
        <Label Text="Inicio de Sesion" FontSize="20" FontAttributes="Bold" TextColor="Red" HorizontalOptions="Center" VerticalOptions="Center" />
        <Image Source="logo_empresa.png" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Start" />
        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*">
            <Label Text="Usuario" Grid.Column="0" Grid.Row="0"/>
            <Entry x:Name="usernameEntry" Placeholder="Usuario" Grid.Column="1" Grid.Row="0" />
            <Label Text="Contraseña" Grid.Column="0" Grid.Row="2"/>
            <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True" Grid.Column="1" Grid.Row="2" />
        </Grid>
        <Button x:Name="loginButton" Text="Iniciar sesión" Clicked="LoginButton_Clicked" />
    </StackLayout>

</ContentPage>